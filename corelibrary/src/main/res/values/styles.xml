<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme" />

    <style name="ActivityTheme.Translucent" parent="AppTheme.Main">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 横向appbar/actionbar 分割线条 -->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_line</item>
    </style>
    <style name="VerticalLineStyle">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="DialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--popupWindow 从底部弹出动画-->
    <style name="PopupBottomTranslate">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_slide_out</item>
    </style>

    <!--选取图片 相机-->
    <style name="__Picker.Camera.Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--选取图片 相册-->
    <style name="imagepicker_BaseTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="imagepicker_ImagePickerTheme" parent="imagepicker_BaseTheme"></style>

</resources>