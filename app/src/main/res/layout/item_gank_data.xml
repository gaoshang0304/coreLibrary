<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_tech_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:transitionName="item"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:contentPadding="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_tech_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tech_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_pic"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />
        
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_40"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tech_title"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_tech_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawablePadding="6dp"
                android:drawableStart="@mipmap/ic_author"
                android:textColor="@color/comment_reply" />

            <TextView
                android:id="@+id/tv_tech_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_tech_author"
                android:layout_marginStart="5dp"
                android:drawablePadding="6dp"
                android:drawableStart="@mipmap/ic_time"
                android:textColor="@color/comment_reply" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

